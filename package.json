{
  "name": "web-page-builder",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.1",
   "publisher": "Arabic-language",
  "icon": "source/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/almhajer/web-page-builder.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:webPageBuilder.sidebar",
    "onCommand:webPageBuilder.openBuilder"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "webPageBuilder.openBuilder",
        "title": "Open Web Page Builder",
        "category": "Web Page Builder"
      },
      {
        "command": "webPageBuilder.viewSource",
        "title": "%webPageBuilder.viewSource%",
        "category": "Web Page Builder",
        "icon": "$(file-code)"
      },
      {
        "command": "webPageBuilder.undo",
        "title": "%webPageBuilder.undo%",
        "category": "Web Page Builder",
        "icon": "$(discard)"
      },
      {
        "command": "webPageBuilder.redo",
        "title": "%webPageBuilder.redo%",
        "category": "Web Page Builder",
        "icon": "$(redo)"
      },
    
      {
        "command": "webPageBuilder.openFile",
        "title": "%webPageBuilder.openFile%",
        "category": "Web Page Builder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "webPageBuilder.openBrowser",
        "title": "%webPageBuilder.openBrowser%",
        "category": "Web Page Builder",
        "icon": "$(globe)"
      },
      {
        "command": "webPageBuilder.saveAs",
        "title": "%webPageBuilder.saveAs%",
        "category": "Web Page Builder",
        "icon": "$(save)"
      },
      {
        "command": "webPageBuilder.openBuild",
        "title": "%webPageBuilder.openBuild%",
        "category": "Web Page Builder",
        "icon": "$(list-tree)"
      },
      {
        "command": "webPageBuilder.tags",
        "title": "%webPageBuilder.tags%",
        "category": "Web Page Builder",
        "icon": "$(symbol-tag)"
      },
      {
        "command": "webPageBuilder.metadata",
        "title": "%webPageBuilder.metadata%",
        "category": "Web Page Builder",
        "icon": "$(file-code)"
      },
      {
        "command": "webPageBuilder.content",
        "title": "%webPageBuilder.content%",
        "category": "Web Page Builder",
        "icon": "$(file-text)"
      },
      {
        "command": "webPageBuilder.media",
        "title": "%webPageBuilder.media%",
        "category": "Web Page Builder",
        "icon": "$(file-media)"
      },
      {
        "command": "webPageBuilder.forms",
        "title": "%webPageBuilder.forms%",
        "category": "Web Page Builder",
        "icon": "$(checklist)"
      },
      {
        "command": "webPageBuilder.interactive",
        "title": "%webPageBuilder.interactive%",
        "category": "Web Page Builder",
        "icon": "$(beaker)"
      },
      {
        "command": "webPageBuilder.text",
        "title": "%webPageBuilder.text%",
        "category": "Web Page Builder",
        "icon": "$(text)"
      },
      {
        "command": "webPageBuilder.embedded",
        "title": "%webPageBuilder.embedded%",
        "category": "Web Page Builder",
        "icon": "$(file-binary)"
      },
      {
        "command": "webPageBuilder.scripting",
        "title": "%webPageBuilder.scripting%",
        "category": "Web Page Builder",
        "icon": "$(code)"
      },
      {
        "command": "webPageBuilder.editing",
        "title": "%webPageBuilder.editing%",
        "category": "Web Page Builder",
        "icon": "$(edit)"
      },
      {
        "command": "webPageBuilder.view",
        "title": "%webPageBuilder.view%",
        "category": "Web Page Builder",
        "icon": "$(eye)"
      },
      {
        "command": "webPageBuilder.preview",
        "title": "%webPageBuilder.preview%",
        "category": "Web Page Builder",
        "icon": "$(play)"
      },
      {
        "command": "webPageBuilder.debug",
        "title": "%webPageBuilder.debug%",
        "category": "Web Page Builder",
        "icon": "$(bug)"
      },
      {
        "command": "webPageBuilder.publish",
        "title": "%webPageBuilder.publish%",
        "category": "Web Page Builder",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "webPageBuilder.openSettings",
        "title": "%webPageBuilder.openSettings%",
        "category": "Web Page Builder",
        "icon": "$(settings-gear)"
      },
      {
        "command": "webPageBuilder.updateSidebarLocale",
        "title": "%webPageBuilder.updateSidebarLocale%",
        "category": "Web Page Builder"
      },
      {
        "command": "webPageBuilder.help",
        "title": "%webPageBuilder.help%",
        "category": "Web Page Builder",
        "icon": "$(question)"
      },
      {
        "command": "webPageBuilder.openWebviews",
        "title": "%webPageBuilder.openWebviews%",
        "category": "Web Page Builder",
        "icon": "$(preview)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "webPageBuilder",
          "title": "%webPageBuilder.title%",
          "icon": "source/icon.svg"
        }
      ]
    },
    "views": {
      "webPageBuilder": [
        {
          "id": "webPageBuilder.sidebar",
          "name": "%webPageBuilder.name%",
          "type": "webview",
          "icon": "source/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "webPageBuilder.openFile",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@1"
        },
        {
          "command": "webPageBuilder.openBrowser",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@2"
        },
        {
          "command": "webPageBuilder.openWebviews",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@3"
        },
        {
          "command": "webPageBuilder.viewSource",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@3"
        },
        {
          "command": "webPageBuilder.saveAs",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@4"
        },
        {
          "command": "webPageBuilder.undo",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@5"
        },
        {
          "command": "webPageBuilder.redo",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@6"
        },
        {
          "command": "webPageBuilder.openBuild",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@7"
        },
        {
          "command": "webPageBuilder.openSettings",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation@8"
        }
      ],
      "editor/title": [
        {
          "command": "webPageBuilder.preview",
          "when": "editorLangId == html || editorLangId == css || editorLangId == javascript || editorLangId == typescript",
          "group": "navigation@1"
        },
        {
          "command": "webPageBuilder.debug",
          "when": "editorLangId == html || editorLangId == css || editorLangId == javascript || editorLangId == typescript",
          "group": "navigation@2"
        },
        {
          "command": "webPageBuilder.publish",
          "when": "editorLangId == html || editorLangId == css || editorLangId == javascript || editorLangId == typescript",
          "group": "navigation@3"
        }
      ],
      "editor/title/context": [
        {
          "command": "webPageBuilder.tags",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@1"
        },
        {
          "command": "webPageBuilder.metadata",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@2"
        },
        {
          "command": "webPageBuilder.content",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@3"
        },
        {
          "command": "webPageBuilder.media",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@4"
        },
        {
          "command": "webPageBuilder.forms",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@5"
        },
        {
          "command": "webPageBuilder.interactive",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@6"
        },
        {
          "command": "webPageBuilder.text",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@7"
        },
        {
          "command": "webPageBuilder.embedded",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@8"
        },
        {
          "command": "webPageBuilder.scripting",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@9"
        },
        {
          "command": "webPageBuilder.editing",
          "when": "editorLangId == html",
          "group": "1_webPageBuilder@10"
        },
        {
          "command": "webPageBuilder.view",
          "when": "editorLangId == html || editorLangId == css || editorLangId == javascript || editorLangId == typescript",
          "group": "2_webPageBuilder@1"
        },
        {
          "command": "webPageBuilder.help",
          "when": "editorLangId == html || editorLangId == css || editorLangId == javascript || editorLangId == typescript",
          "group": "2_webPageBuilder@2"
        }
      ]
    }
  },
  "configuration": {
    "title": "Web Page Builder",
    "properties": {
      "webPageBuilder.language": {
        "type": "string",
        "default": "auto",
        "enum": ["auto", "ar", "en"],
        "enumDescriptions": [
          "تلقائي - حسب لغة VS Code",
          "Auto - Based on VS Code language",
          "العربية",
          "English"
        ],
        "description": "لغة واجهة الإضافة / Extension interface language"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-webviews",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "copy-webviews": "mkdir -p out/webviews out/locales && cp -r src/webviews/* out/webviews/ && cp -r src/locales/* out/locales/",
    "package": "vsce package",
    "vscode:package": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^16.18.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.31.0",
    "typescript": "^4.9.4"
  }
}

