{
  "name": "web-page-builder",
  "displayName": "Web Page Builder",
  "description": "أداة بناء صفحات ويب تفاعلية - Interactive Web Page Builder",
  "version": "0.0.0",
  "publisher": "your-publisher-name",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:webPageBuilder.sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "webPageBuilder.openBuilder",
        "title": "Open Web Page Builder",
        "category": "Web Page Builder"
      },
      {
        "command": "webPageBuilder.refresh",
        "title": "Refresh",
        "category": "Web Page Builder",
        "icon": "$(refresh)"
      },
      {
        "command": "webPageBuilder.newProject",
        "title": "عرض صفحة الويب",
        "category": "Web Page Builder",
        "icon": "$(preview)"
      },
      {
        "command": "webPageBuilder.openSource",
        "title": "تصدير الكود",
        "category": "Web Page Builder",
        "icon": "$(go-to-file)"
      },
      {
        "command": "webPageBuilder.openBuild",
        "title": "فتح خصائص العناصر",
        "category": "Web Page Builder",
        "icon": "$(list-tree)"
      },
      {
        "command": "webPageBuilder.tags",
        "title": "قائمة الوسوم",
        "category": "Web Page Builder",
        "icon": "$(symbol-tag)"
      },
      {
        "command": "webPageBuilder.metadata",
        "title": "البيانات الوصفية",
        "category": "Web Page Builder",
        "icon": "$(file-code)"
      },
      {
        "command": "webPageBuilder.content",
        "title": "المحتوى",
        "category": "Web Page Builder",
        "icon": "$(file-text)"
      },
      {
        "command": "webPageBuilder.media",
        "title": "الوسائط",
        "category": "Web Page Builder",
        "icon": "$(file-media)"
      },
      {
        "command": "webPageBuilder.forms",
        "title": "النماذج",
        "category": "Web Page Builder",
        "icon": "$(checklist)"
      },
      {
        "command": "webPageBuilder.interactive",
        "title": "التفاعلية",
        "category": "Web Page Builder",
        "icon": "$(beaker)"
      },
      {
        "command": "webPageBuilder.text",
        "title": "النص",
        "category": "Web Page Builder",
        "icon": "$(text)"
      },
      {
        "command": "webPageBuilder.embedded",
        "title": "المضمنة",
        "category": "Web Page Builder",
        "icon": "$(file-binary)"
      },
      {
        "command": "webPageBuilder.scripting",
        "title": "السكربت",
        "category": "Web Page Builder",
        "icon": "$(code)"
      },
      {
        "command": "webPageBuilder.editing",
        "title": "التعديل",
        "category": "Web Page Builder",
        "icon": "$(edit)"
      },
      {
        "command": "webPageBuilder.view",
        "title": "العرض",
        "category": "Web Page Builder",
        "icon": "$(eye)"
      },
      {
        "command": "webPageBuilder.preview",
        "title": "المعاينة",
        "category": "Web Page Builder",
        "icon": "$(play)"
      },
      {
        "command": "webPageBuilder.debug",
        "title": "التصحيح",
        "category": "Web Page Builder",
        "icon": "$(bug)"
      },
      {
        "command": "webPageBuilder.publish",
        "title": "النشر",
        "category": "Web Page Builder",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "webPageBuilder.settings",
        "title": "الإعدادات",
        "category": "Web Page Builder",
        "icon": "$(settings-gear)"
      },
      {
        "command": "webPageBuilder.help",
        "title": "المساعدة",
        "category": "Web Page Builder",
        "icon": "$(question)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "webPageBuilder",
          "title": "Web Page Builder - أداة بناء صفحات ويب تفاعلية",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "webPageBuilder": [
        {
          "id": "webPageBuilder.sidebar",
          "name": "Web Page Builder",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "webPageBuilder.newProject",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation"
        },
        {
          "command": "webPageBuilder.openSource",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation"
        },
        {
          "command": "webPageBuilder.openBuild",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation"
        },
        {
          "command": "webPageBuilder.settings",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation"
        },
        {
          "command": "webPageBuilder.refresh",
          "when": "view == webPageBuilder.sidebar",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^16.18.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.31.0",
    "typescript": "^4.9.4"
  }
}

